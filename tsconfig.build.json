{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build-output/types/**/*.ts",
    "dist/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts",
    "netlify-build/types/**/*.ts"
  ]
}
